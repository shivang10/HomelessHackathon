    <div id="formwid">
        <form autocomplete="off" method="POST" action="/volunteerreg">
            <div class="volunteerreg">
                <h1 class="heading">Member Details</h1>
                <p>Please fill the form to register as volunteer.</p>
                <hr>
                <label>First Name</label>
                <input type="text" name="fnamev" placeholder="First Name" autocomplete="off" required>
                <label>Last Name</label>
                <input type="text" name="lnamev" placeholder="Last Name" autocomplete="off" required>
                <label>Email ID</label>
                <input type="text" name="emailv" placeholder="Email Id" autocomplete="off" required>
                <label>Phone Number</label>
                <input type="number" name="phnumv" placeholder="Phone Number" min="1000000000" max="9999999999"
                    required>
                <label>Gender</label>
                <select name="genderv">
                    <option disabled>Gender</option>
                    <option>Male</option>
                    <option>Female</option>
                    <option>Other</option>
                    <option>Do not wish to tell</option>
                </select>
            </div>
            <div>
                <button type="submit">Register</button>
            </div>
        </form>
    </div>
